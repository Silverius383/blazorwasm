@page "/mahasiswa"
@inject HttpClient Http
@using System.Net.Http
@using System.Net.Http.Json

<PageTitle>List mahasiswa</PageTitle>

<h1>Mahasiswa SI UKDW</h1>

<p>This component demonstrates fetching data Mahasiswa from the server.</p>

@if (mhslist == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nama</th>
                <th>NIM</th>
                <th>Alamat</th>
                <th>Email</th>
                <th>Foto</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var mh in mhslist)
            {
                <tr>
                    <td>@mh.id</td>
                    <td>@mh.nama</td>
                    <td>@mh.nim</td>
                    <td>@mh.alamat</td>
                    <td>@mh.email</td>
                    <td>@mh.foto</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Mahasiswa[]? mhslist;

    protected override async Task OnInitializedAsync()
    {
        mhslist = await Http.GetFromJsonAsync<Mahasiswa[]>("https://kpsi.fti.ukdw.ac.id/api/progmob/mhs/72170177");
    }
public class Mahasiswa
    {
        public int id { get; set; }

        public string nama { get; set; }

        public string nim { get; set; }

        public string alamat { get; set; }
        
        public string email { get; set; }

        public string foto { get; set; }
    }
}
